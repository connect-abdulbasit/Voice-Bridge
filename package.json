{
  "name": "voice-bridge-monorepo",
  "version": "1.0.0",
  "description": "Voice Bridge - WhatsApp Voice Processing System",
  "private": true,
  "workspaces": [
    "backend(node)",
    "nextjs"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd \"backend(node)\" && npx ts-node src/server.ts",
    "dev:frontend": "cd nextjs && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd \"backend(node)\" && npm run build",
    "build:frontend": "cd nextjs && npm run build",
    "start": "cd \"backend(node)\" && npm start",
    "start:backend": "cd \"backend(node)\" && npm start",
    "start:frontend": "cd nextjs && npm start",
    "install:all": "npm install && cd \"backend(node)\" && npm install && cd ../nextjs && npm install",
    "clean": "rm -rf node_modules \"backend(node)/node_modules\" nextjs/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}